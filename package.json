{
  "name": "mytools-electron-app",
  "version": "1.0.0",
  "description": "Multi-page Electron application with organized structure",
  "main": "main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --inspect",
    "build": "electron-builder --win",
    "build:dir": "electron-builder --win --dir"
  },
  "keywords": [
    "electron",
    "multi-page",
    "tools"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.mytools.app",
    "productName": "MyTools",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "main/**/*",
      "renderer/**/*",
      "pages/**/*",
      "assets/**/*",
      "package.json"
    ]
  }
}
